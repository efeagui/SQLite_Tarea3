<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite_Tarea3.Views.ListEmployees"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Persona"
                     Command="{ Binding  AddCommand}"/>
    </ContentPage.ToolbarItems>
    <StackLayout Margin="7,0">
        <ScrollView>

            <StackLayout>

                <Image Source="{Binding Foto}" IsVisible="{Binding IsEmpty}" VerticalOptions="Center"/>
                <Label Text="No hay personas agregadas."
                       HorizontalOptions="Center" 
                       VerticalOptions="End"
                       IsEnabled="{Binding IsEmpty}"
                       IsVisible="{Binding IsEmpty}"
                       HorizontalTextAlignment="Center"
                       FontSize="25"/>

                <Label Text="Tarea 3 Guardar en SQLite"
                       HorizontalOptions="Center" 
                       VerticalOptions="End"
                       IsEnabled="{Binding IsEmpty}"
                       IsVisible="{Binding IsEmpty}"
                       HorizontalTextAlignment="Center"
                       FontSize="21"/>
                
                <Label Text="Favio Roberto Aguilera"
                       HorizontalOptions="Center" 
                       VerticalOptions="End"
                       IsEnabled="{Binding IsEmpty}"
                       IsVisible="{Binding IsEmpty}"
                       HorizontalTextAlignment="Center"
                       FontSize="19"/>

                <ListView x:Name="Employees"
                        ItemsSource="{Binding ListEmployees}"
                        SelectionMode="None"
                        Margin="10"
                        HeightRequest="200"
                         IsVisible="{Binding IsNotEmpty}"
                          
                        IsEnabled="{Binding IsNotEmpty}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid x:Name="Item" ColumnSpacing="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition />
                                        <ColumnDefinition  />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>


                                    <Label    Style="{StaticResource labelListStyle}"
                                               Grid.Row="0"
                                               Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Nombre}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding Apellido}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label    Style="{StaticResource labelListStyle}"
                                               Grid.Row="0"
                                               Grid.Column="1"
                                              Text="{Binding Correo}"/>

                                    <ImageButton Source="delete_user.png"
                                             Grid.Row="0"
                                             Grid.Column="3"
                                             
                                            Style="{StaticResource imageButtonStyle}"
                                            BindingContext="{Binding Source={x:Reference Employees}, Path=BindingContext}" 
                                            Command="{Binding DeleteCommand}" 
                                            CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}" />

                                    <ImageButton Source="edit_user.png"
                                            Grid.Column="2"
                                            Grid.Row="0"
                                            Style="{StaticResource imageButtonStyle}"
                                            BindingContext="{Binding Source={x:Reference Employees}, Path=BindingContext}" 
                                            Command="{Binding EditCommand}" 
                                            CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>